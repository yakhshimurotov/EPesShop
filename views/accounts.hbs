<div class="container">
  <h1 class="mb-5">Account's</h1>
  <div
    id="loader"
    class="loader"
    style="position: fixed; inset: 0; color: white; font-size: 2rem; display: flex; justify-content: center; align-items: center; z-index: 9999;"
  >
    <div class="spinner-border loader-obj" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>
  {{#if product.length}}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 p-3 card-box">
      {{#each product}}
        <div class="col">
          <div class="card card-in">
            <img
              src="/uploads/{{this.image}}"
              alt="product image"
              width="100%"
              class="img-thumbnail"
              data-bs-toggle="modal"
              data-bs-target="#imageModal{{@index}}"
            />

            <div class="card-body">
              <h5 class="text-bold fw-bold">{{this.title}}</h5>
              <p class="card-text">{{this.description}}
                Lorem ipsum dolor sit amet consectetur adipisicing elit.
                Quisquam, voluptatibus.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="avatar">
                  <p>{{getFullNameCharacter user.firstName}}.{{getFullNameCharacter user.lastName}}</p>
                </div>
                <p>{{this.uzs}} so'm ðŸ’µ</p>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <div
                    class="btn-group-sm"
                    role="group"
                    aria-label="Basic example">
                    <a class="btn btn-dark btn-sm" href="{{this.url}}">Message</a>
                    {{!-- {{#if @root.token}}
                      {{#ifequal user._id @root.userId}}
                        <button type="button" class="btn btn-dark">Edit</button>
                        <button
                          type="button"
                          class="btn btn-dark"
                        >Delete</button>
                      {{/ifequal}}
                    {{/if}} --}}
                  </div>
                </div>
                <small class="text-body-secondary">9 mins</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal -->
        <div
          class="modal fade"
          id="imageModal{{@index}}"
          tabindex="-1"
          aria-labelledby="imageModalLabel{{@index}}"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
              <div class="modal-body text-center">
                <img
                  src="/uploads/{{this.image}}"
                  class="img-fluid"
                  alt="Full image"
                />
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p>No Product ðŸ‘€</p>
  {{/if}}
</div>