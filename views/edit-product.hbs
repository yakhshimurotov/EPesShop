<div class="container">
  <h1 class="title">Edit Product</h1>
  <div class="info-box mt-5">
    <form
      id="myForm"
      action="/edit-product/{{product._id}}"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="input-group mb-3">
        <input
          class="form-control"
          name="title"
          type="text"
          placeholder="Title ✏️"
          value="{{product.title}}"
        />
        <br />
      </div>
      <div class="form-floating mb-3">
        <textarea
          name="description"
          class="form-control"
          placeholder="Leave a comment here"
          id="floatingTextarea2"
          style="height: 100px"
        >{{product.description}}</textarea>
        <label for="floatingTextarea2">Description 📄</label>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text">📷</span>
        <input
          class="form-control"
          name="image"
          type="file"
          id="fileInput"
          accept="image/*"
          value="{{product.image}}"
        />
        <br />
      </div>

      <div class="mb-3 info-error">
        <div class="input-group">
          <span class="input-group-text" id="basic-addon3">Your//t.me Username
            🔗</span>
          <input
            name="url"
            type="text"
            class="form-control"
            id="basic-url"
            aria-describedby="basic-addon3 basic-addon4"
            value="{{product.url}}"
          />
        </div>
        <div class="d-flex justify-content-between align-items-center gap-2">
        <div class="input-group mt-3 input-sum">
          <span class="input-group-text">UZS 💵</span>
          <input
            name="uzs"
            type="text"
            id="uzsInput"
            class="form-control"
            min="0"
            aria-label="Amount (to the nearest dollar)"
            value="{{product.uzs}}"
          />
        </div>

        <div class="input-group mt-3 input-sum">
          <span class="input-group-text">Scores ⭐</span>
          <input
            name="scores"
            type="text"
            id="uzsInput"
            class="form-control codeInput"
            maxlength="4"
            min="0"
            aria-label="Amount (to the nearest dollar)"
            value="{{product.scores}}"
          />
          {{!-- <span class="input-group-text">⭐</span> --}}
        </div>
        </div>
        <button type="submit" class="btn btn-dark mt-3">Edit product</button>
        {{#if isEditProduct}}
          <p class="error">{{isEditProduct}} ⚠️</p>
        {{/if}}
      </div>
    </form>
  </div>
</div>